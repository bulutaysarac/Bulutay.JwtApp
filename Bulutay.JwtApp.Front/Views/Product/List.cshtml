@model List<ProductListModel>
@{
    Layout = "_Layout";
}

@if (Model?.Count > 0)
{
    <div class="text-end mb-3">
        <a class="btn btn-primary" asp-action="Create" asp-controller="Product">Create</a>
    </div>
    <table class="table table-hover table-striped border">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Stock</th>
                <th>Price</th>
                <th>Category Id</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Stock</td>
                    <td>@product.Price</td>
                    <td>@product.CategoryId</td>
                    <td>
                        <a class="btn btn-warning" asp-action="Update" asp-controller="Product" asp-route-id="@product.Id">Update</a>
                        <a class="btn btn-danger" asp-action="Remove" asp-controller="Product" asp-route-id="@product.Id">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}