@model List<CategoryListModel>
@{
    Layout = "_Layout";
}

@if (Model?.Count > 0)
{
    <div class="text-end mb-3">
        <a class="btn btn-primary" asp-action="Create" asp-controller="Category">Create</a>
    </div>
    <table class="table table-hover table-striped border">
        <thead>
            <tr>
                <th>Id</th>
                <th>Definition</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Definition</td>
                    <td>
                        <a class="btn btn-warning" asp-action="Update" asp-controller="Category" asp-route-id="@category.Id">Update</a>
                        <a class="btn btn-danger" asp-action="Remove" asp-controller="Category" asp-route-id="@category.Id">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}