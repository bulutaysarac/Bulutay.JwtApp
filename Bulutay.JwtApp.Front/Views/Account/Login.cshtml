@model AppUserLoginModel
@{
    Layout = "_Layout";
}

<form method="post" class="w-75 m-5 p-3 shadow mx-auto" asp-action="Login" asp-controller="Account">
    <div class="mb-3">
        <label asp-for="@Model.Username">Username : </label>
        <input type="text" class="form-control" asp-for="@Model.Username" />
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Password">Password : </label>
        <input type="password" class="form-control" asp-for="@Model.Password" />
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Login</button>
    </div>
    <div asp-validation-summary="All">

    </div>
</form>